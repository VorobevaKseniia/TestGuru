<tbody>
  <tr>
    <td class="align-middle">
      <%= content_tag :span, test.title, class: 'test-title', data: {test_id: test.id} %>
      <%= render 'form_inline', test: test == @test ? @test : test %>
    </td>
    <td class="align-middle" ><%= test_level(test) %></td>
    <td class="align-middle"><%= test.questions.count %></td>
    <td class="align-middle">
      <%= link_to t('admin.actions.show'), admin_test_path(test), class: "fw-bolder link-secondary text-decoration-none" %> |
      <%= link_to t('admin.actions.edit'), edit_admin_test_path(test),
                  data: { test_id: test.id },
                  class: "fw-bolder link-secondary text-decoration-none form-inline-link" %> |
      <%= link_to t('admin.actions.delete'),
                    admin_test_path(test),
                    method: :delete,
                    data: {confirm: t('.confirm_delete')},
                    class: "fw-bolder link-secondary text-decoration-none"%>
    </td>
  </tr>
</tbody>

