<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_area :title, id: :badge_title, cols: 30 %>
  </p>
  <p>
    <%= form.label :image_name %><br>
    <%= form.text_field :image_name, id: :badge_image_name %>
  </p>
  <p>
    <%= form.label :rule %><br>
    <%= form.text_area :rule, id: :badge_rule, cols: 30 %>
  </p>
  <p>
    <%= form.label :rule_value %><br>
    <%= form.text_field :rule_value, id: :badge_rule_value %>
  </p>

  <p><%= form.submit %></p>
<% end %>
