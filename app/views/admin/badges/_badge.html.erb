<tbody>
  <tr>
    <td><%= badge.title %></td>
    <td><%= image_tag("#{badge.image_name}.png", :size => 50) %></td>
    <td class="align-middle">
      <%= link_to t('admin.actions.show'), admin_badge_path(badge), class: "fw-bolder link-secondary text-decoration-none" %> |
      <%= link_to t('admin.actions.delete'),
                  admin_badge_path(badge),
                  method: :delete,
                  data: {confirm: t('.confirm_delete')},
                  class: "fw-bolder link-secondary text-decoration-none"%>
    </td>
  </tr>
</tbody>